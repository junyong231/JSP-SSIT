		<script type="text/javascript">
		
		$("#tabs-1 a").on("click" , function() {
			
			/* 풀이 1
			let n = $("#n").val();
			let oldHref = $(this).attr("href"); // "ex02_ok.jsp"
			let newHref = `\${oldHref}?n=\${n}`;
			$(this).attr("href" , newHref);
			*/
			
 			$(this).attr("href" , function(index, oldHref) {
 				let n = $("#n").val();
				return `\${oldHref}?n=\${n}`;
			}) 
			
		});
		
