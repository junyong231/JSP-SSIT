<script>
	$("#num").focus()
	
	$("#num").on("keydown", function(e) {
		if ( !(e.which >= 48 && e.which <= 57
		        || e.which == 8
		        || e.which == 13
		        || e.which == 229
		    )) {
		      alert("숫자만 입력하세요")
		      return false; // 이벤트 취소
		    }
		if (e.which == 13) {
			let num = $("#num").val();
			num = parseInt(num);
			let sum = 0;
			let str ="";
			for (let i = 1; i <= num; i++) {
				str += i + "+";
				sum += i;
			}
			str += "=" + sum;
			$("#demo").text(str)
		}
	})
	
	$("#num")
</script>
